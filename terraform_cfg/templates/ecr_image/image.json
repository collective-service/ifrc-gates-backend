[
    {
      "name": "backend-app-${environment}",
      "image": "${app_image}",
      "cpu": ${fargate_cpu},
      "memory": ${fargate_memory},
      "networkMode": "awsvpc",
      "logConfiguration": {
          "logDriver": "awslogs",
          "options": {
            "awslogs-group": "/ecs/backend-${environment}",
            "awslogs-region": "${aws_region}",
            "awslogs-stream-prefix": "ecs"
          }
      },
      "portMappings": [
        {
          "containerPort": ${app_port},
          "hostPort": ${app_port}
        }
      ],
      "environment": [
        {
            "name": "DB_NAME",
            "value": "${db_name}"
        },
        {
            "name": "DB_USER",
            "value": "${db_user}"
        },
        {
            "name": "DB_PWD",
            "value": "${db_pwd}"
        },
        {
            "name": "DB_HOST",
            "value": "${db_host}"
        },
        {
            "name": "DB_PORT",
            "value": "${db_port}"
        },
        {
            "name": "CELERY_REDIS_URL",
            "value": "${celery_redis_url}"
        },
        {
            "name": "DJANGO_CACHE_REDIS_URL",
            "value": "${django_cache_redis_url}"
        }
      ]
    }
  ]